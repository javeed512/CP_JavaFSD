@Controller
@RequestMapping("/employee-controller")
public class EmployeeController {
	
	
			@RequestMapping(value="/hello",method = RequestMethod.GET)
			@ResponseBody
			public  String   sayHello() {
				
				
				return "Hello Friends";
			}
	
	
	

}
